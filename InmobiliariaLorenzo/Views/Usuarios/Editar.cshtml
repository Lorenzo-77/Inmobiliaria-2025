@model Inmobiliaria_.Net_Core.Models.Usuario

@{
	ViewData["Title"] = "Editar Usuario";
}

<div class="row justify-content-center">
	<div class="col-md-8">
		<div class="card shadow-sm">
			<div class="card-header bg-primary text-white">
				<h4 class="mb-0">Editar Usuario</h4>
			</div>
			<div class="card-body">
				<form asp-action="Edit">
					<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

					<input asp-for="Id" type="hidden" />

					<div class="row g-3">
						<div class="col-md-6">
							<div class="form-floating">
								<input asp-for="Nombre" class="form-control" placeholder="Nombre" />
								<label asp-for="Nombre"></label>
								<span asp-validation-for="Nombre" class="text-danger small"></span>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-floating">
								<input asp-for="Apellido" class="form-control" placeholder="Apellido" />
								<label asp-for="Apellido"></label>
								<span asp-validation-for="Apellido" class="text-danger small"></span>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-floating">
								<input asp-for="Email" class="form-control" placeholder="Email" />
								<label asp-for="Email"></label>
								<span asp-validation-for="Email" class="text-danger small"></span>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-floating">
								<input asp-for="Clave" class="form-control" placeholder="Clave" type="password" />
								<label asp-for="Clave"></label>
								<span asp-validation-for="Clave" class="text-danger small"></span>
							</div>
						</div>

						@if (User.IsInRole("Administrador") || User.IsInRole("SuperAdministrador"))
						{
							<div class="col-md-6">
								<div class="form-floating">
									<select class="form-select" name="Rol" asp-for="Rol">
										@foreach (var kvp in (IDictionary<int, string>)ViewBag.Roles)
										{
											<option value="@kvp.Key" @(kvp.Key == Model.Rol ? "selected" : "")>@kvp.Value</option>
										}
									</select>
									<label>Rol</label>
								</div>
								<span asp-validation-for="Rol" class="text-danger small"></span>
							</div>
						}

						<div class="col-md-6 d-flex flex-column justify-content-center">
							<label asp-for="Avatar" class="form-label mb-2">Avatar</label>
							@if (!string.IsNullOrEmpty(Model.Avatar))
							{
								<img src="@Model.Avatar" class="img-thumbnail" width="100" />
							}
							else
							{
								<span class="text-muted">Sin avatar</span>
							}
						</div>
					</div>

					<div class="mt-4 d-flex justify-content-between">
						<a asp-action="Index" class="btn btn-outline-secondary">
							<i class="fa-solid fa-arrow-left"></i> Volver
						</a>
						<button type="submit" class="btn btn-primary">
							<i class="fa-solid fa-floppy-disk"></i> Guardar Cambios
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
